@model IEnumerable<AppLibrary.DtoModels.Lending>
@{
    ViewData["Title"] = "ListOfBooks";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Book</th>
            <th>Client</th>
            <th>Date of lending</th>
            <th>Return</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var lend in Model)
        {
        <tr>
            <td>@lend.Book.Title</td>
            <td>@lend.Client.Name</td>
            <td>@lend.DateOfLending</td>
            <td><a class="btn btn-success" asp-area="" asp-controller="Lending" asp-action="ReturnBook" asp-route-bookId="@lend.Id">Return</a></td>
        </tr>
        }
    </tbody>
</table>