@model BookCopiesViewModel;
@{
    ViewData["Title"] = "Update";
}

<div class="row orderForm">

    <form asp-controller="BookCopies" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Update book copies</h3>
        @Html.HiddenFor(m => Model.BookCopies.Id)

        <div class="form-group">
            <label asp-for="BookCopies.Library" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.BookCopies.LibraryId,
                                                  new SelectList(Model.Libraries.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"),
                                                  htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BookCopies.Book" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.BookCopies.BookId,
                                                  new SelectList(Model.Books.Select(x => new { Value = x.Id, Text = x.Title }), "Value", "Text"),
                                                  htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BookCopies.NumberOfCopies" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="BookCopies.NumberOfCopies" class="form-control" placeholder="Enter number of copies" />
                <span asp-validation-for="BookCopies.NumberOfCopies" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="BookCopies" asp-action="Index" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>

