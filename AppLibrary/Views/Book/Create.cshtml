@model BookViewModel;
@{
    ViewData["Title"] = "Create";
}

<div class="row orderForm">
    <div class="col-md-6">
        <form asp-controller="Book" asp-action="Create" method="post" class="form-horizontal" role="form">
            <h3 class="col-md-offset-2">Create new book</h3>
            <div class="form-group">
                <label asp-for="Book.Publisher" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.Book.PublisherId,
                                           new SelectList(Model.Publishers.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"), "Select a publisher",
                                           htmlAttributes: new { @class = "form-control border-input" })
                    <span asp-validation-for="Book.Publisher" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <a class="btn btn-success"  asp-controller="Publisher" asp-action="Create">Create a publisher</a>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Book.Title" class="col-md-2 control-label">Title</label>
                <div class="col-md-6">
                    <input asp-for="Book.Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Book.NumberOfPages" class="col-md-2 control-label">Number of pages</label>
                <div class="col-md-6">
                    <input asp-for="Book.NumberOfPages" class="form-control" placeholder="Enter number of pages" />
                    <span asp-validation-for="Book.NumberOfPages" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Book.YearOfIssue" class="col-md-2 control-label">Year of issue</label>
                <div class="col-md-6">
                    <input asp-for="Book.YearOfIssue" class="form-control" placeholder="Year of issue" />
                    <span asp-validation-for="Book.YearOfIssue" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-info" type="submit" value="Return" asp-controller="Book" asp-action="Index" />
                    <input class="btn btn-success" type="submit" value="Create" />
                </div>
            </div>
        </form>
    </div>
    </div>

