@model PublisherViewModel;
@{
    ViewData["Title"] = "Create";
}

<div class="row orderForm">
    <form asp-controller="Publisher" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Create new publisher</h3>
        <div class="form-group">
            <label asp-for="Publisher.Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Publisher.Name" class="form-control" placeholder="Enter publisher name" />
                <span asp-validation-for="Publisher.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Publisher.Country" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Publisher.Country" class="form-control" placeholder="Enter publisher country" />
                <span asp-validation-for="Publisher.Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-info" type="submit" value="Return" asp-controller="Publisher" asp-action="Index" />
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>
