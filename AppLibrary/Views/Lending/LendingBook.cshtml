@model LendingViewModel;
@{
    ViewData["Title"] = "LendingBook";
}

<h2>Make a lending</h2>

<div class="row orderForm">
    <div class="col-md-6">
        <form asp-controller="Lending" asp-action="LendingBook" method="post" class="form-horizontal" role="form">
            <h3 class="col-md-offset-2">Lend a book</h3>
            <div class="form-group">
                <label asp-for="Lending.Book" class="col-md-2 control-label">Select book</label>
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.Lending.BookId,
                                           new SelectList(Model.Books.Select(x => new { Value = x.Id, Text = x.Title }), "Value", "Text"), "Select a book",
                                           htmlAttributes: new { @class = "form-control border-input" })
                    <span asp-validation-for="Lending.Book" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <a class="btn btn-success" asp-controller="Book" asp-action="Create">Create a book</a>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Lending.Client" class="col-md-2 control-label">Select client</label>
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.Lending.ClientId,
                                           new SelectList(Model.Clients.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"), "Select a client",
                                           htmlAttributes: new { @class = "form-control border-input" })
                    <span asp-validation-for="Lending.Client" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <a class="btn btn-success" asp-controller="Client" asp-action="Create">Create a client</a>
                </div>

            </div>
            
            <div class="form-group">
                <label asp-for="Lending.DateOfLending" class="col-md-2 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Lending.DateOfLending" class="form-control" placeholder="Enter date of lending" />
                    <span asp-validation-for="Lending.DateOfLending" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <div class="btn-group col-md-offset-2 col-md-6">
                    <input class="btn btn-info" type="submit" value="Return" asp-controller="Lending" asp-action="LendingBook" />
                    <input class="btn btn-success" type="submit" value="Lend" />
                </div>
            </div>
        </form>
    </div>
</div>