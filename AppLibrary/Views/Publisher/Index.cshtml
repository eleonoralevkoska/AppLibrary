@model IEnumerable<AppLibrary.DtoModels.Publisher>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Publisher" asp-action="Create">Create new publisher</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model)
        {
        <tr>
            <td>@publisher.Name</td>
            <td>@publisher.Country</td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Publisher" asp-action="Update" asp-route-id="@publisher.Id">Edit</a></td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Publisher" asp-action="Details" asp-route-id="@publisher.Id">Details</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Publisher" asp-action="Delete" asp-route-id="@publisher.Id">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
