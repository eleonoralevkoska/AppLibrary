@model LendingViewModel;
@{
    ViewData["Title"] = "ReturnBook";
}


<div class="row orderForm">

    <form asp-controller="Lending" asp-action="ReturnBook" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Return book</h3>
        @Html.HiddenFor(m => Model.Lending.Id)

        <div class="form-group">
            <label asp-for="Lending.Book" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Lending.BookId,
                                                  new SelectList(Model.Books.Select(x => new { Value = x.Id, Text = x.Title }), "Value", "Text"),
                                                  htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lending.Client" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Lending.ClientId,
                                                  new SelectList(Model.Clients.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"),
                                                  htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lending.DateOfLending" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Lending.DateOfLending" type="date" asp-format="{0:MM/dd/yyyy}" class="form-control" placeholder="Date of lending" />
                <span asp-validation-for="Lending.DateOfLending" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Lending" asp-action="ListOfBooks" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>
