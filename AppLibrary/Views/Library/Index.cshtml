@model IEnumerable<AppLibrary.DtoModels.Library>;
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Library" asp-action="Create">Create new library</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var library in Model)
        {
        <tr>
            <td>@library.Name</td>
            <td>@library.Address</td>
            <td>@library.City</td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Library" asp-action="Update" asp-route-id="@library.Id">Edit</a></td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Library" asp-action="Details" asp-route-id="@library.Id">Details</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Library" asp-action="Delete" asp-route-id="@library.Id">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
